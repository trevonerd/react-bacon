{
  "name": "react-bacon",
  "version": "1.0.0",
  "private": true,
  "type":"module",
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "clean:deep": "turbo run clean && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && pnpm i",
    "commit": "cz",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:packages": "syncpack lint",
    "prepare": "husky",
    "publish-package": "turbo run build lint test && changeset publish",
    "syncpack": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches",
    "syncpack:format": "syncpack format",
    "syncpack:update": "syncpack update",
    "test": "turbo run test",
    "update:deps": "pnpm up -r --latest"
  },
  "devDependencies": {
    "@3vo/config-hub": "workspace:*",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.8.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-gitmoji": "^0.0.7",
    "esbuild": "^0.23.0",
    "eslint": "^9.8.0",
    "eslint-plugin-react": "^7.35.0",
    "globals": "^15.8.0",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "syncpack": "^12.4.0",
    "turbo": "^2.0.9",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.17.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,html,css}": "prettier --write",
    "*.{js,ts,tsx}": "eslint --cache --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-gitmoji"
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@9.6.0",
  "workspaces": {
    "apps": [
      "apps/*"
    ],
    "packages": [
      "packages/*"
    ]
  }
}
